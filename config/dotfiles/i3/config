# target                 title     bg    text   indicator  border
client.focused           $lavender $base $text  $rosewater $mauve 
client.focused_inactive  $overlay0 $base $text  $rosewater $surface2
client.unfocused         $overlay0 $base $text  $rosewater $surface0
client.urgent            $peach    $base $peach $overlay0  $peach
client.placeholder       $overlay0 $base $text  $overlay0  $transp
client.background        $base

# Font for window titles
font pango:DejaVu Sans Mono 8
# font pango: Droid Sans Mono 10

# disable window titlebars and add borders
for_window [class="^.*"] border pixel 4

# default gaps sizes
gaps inner 10
gaps outer 0

